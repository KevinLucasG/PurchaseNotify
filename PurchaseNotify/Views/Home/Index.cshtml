@{
    ViewData["Title"] = "iPhone 16";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="card-body text-center">
                    <img src="/iphone16.jpg" alt="Imagem do iPhone 16" class="img-fluid rounded mb-3" style="max-height: 300px;" />

                    <h2 class="text-danger">@("R$ " + 5000.00.ToString("C", new System.Globalization.CultureInfo("pt-BR")).Replace("R$", "").Trim())</h2>

                    <form asp-action="Purchase" asp-controller="Purchase" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="ProductName" value="iPhone 16" />
                        <input type="hidden" name="Price" value="5000.00" />

                        <button type="submit" class="btn btn-lg btn-danger mt-3 px-5 py-2">
                            <i class="fas fa-shopping-cart"></i> Comprar
                        </button>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    Estoque limitado. Garanta o seu!
                </div>
            </div>
        </div>
    </div>
</div>
